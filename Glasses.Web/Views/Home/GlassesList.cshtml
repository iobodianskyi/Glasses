@model IEnumerable<Glasses.Web.Models.Glasses>
@{
    ViewBag.Title = "Список окулярів";
}

<h2>Список доступних окулярів</h2>
@foreach (var glass in Model)
{
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title" id="panel-title">@glass.Name<a class="anchorjs-link" href="#panel-title"><span class="anchorjs-icon"></span></a></h3>
        </div>
        <div class="panel-body">
            <div>
                <img src="@glass.ImageUrl" class="glasses-image" />
            </div>
            <div>
                <label>Діоптрії</label>
                <span>@glass.Dioptries</span>
            </div>
            <div class="pull-right">
                <a class="order btn btn-primary" href="">Замовити доставку &raquo;</a>
            </div>
            <div>
                <label>Опис</label>
                <div>@glass.Description</div>
            </div>
            
        </div>
    </div>
}

<div id="orderModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Замовлення</h4>
            </div>
            <div class="modal-body">
                <p> Замовити доставку окулярів Ви можете зателефонувавши за ном.:0933988644 </br>Доставка відбувається службою доставки "Нова Пошта"</p>
                <div>протягом двох днів.</div>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Закрити", "", null, new { id = "show-dialog-button", @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('.order.btn').click(function (event) {
                $('#orderModal').modal('show');                   
                event.preventDefault();
            });
            }
        );
    </script>
}